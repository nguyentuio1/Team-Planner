# Frontend Environment Variables

# Backend API URL - Update this to your Vercel deployment URL
VITE_API_BASE_URL=https://your-vercel-app.vercel.app/api

# App Configuration
VITE_APP_NAME=Team Planner
VITE_APP_VERSION=2.0.0

# Features
VITE_ENABLE_DEBUG=false
VITE_ENABLE_REAL_BACKEND=true

# Backend Environment Variables (Add these in Vercel dashboard)
DATABASE_URL=postgresql://username:password@host:port/database
JWT_SECRET=your-jwt-secret-key
NODE_ENV=production
FRONTEND_URL=https://your-vercel-app.vercel.app

# Optional: Email configuration for invitations
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password